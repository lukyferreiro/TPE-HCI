{
  "name": "primus",
  "version": "7.3.5",
  "description": "Primus is a simple abstraction around real-time frameworks. It allows you to easily switch between different frameworks without any code changes.",
  "main": "index.js",
  "scripts": {
    "build": "mkdir -p dist && browserify primus.js -s Primus -p deumdify | derequire > dist/primus.js",
    "update": "find transformers -name update.sh -exec bash {} \\;",
    "integration": "npm run build && mocha test/*.integration.js --exit",
    "test": "npm run build && mocha test/*.test.js",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://github.com/primus/primus#readme",
  "repository": {
    "type": "git",
    "url": "git://github.com/primus/primus.git"
  },
  "keywords": [
    "abstraction",
    "browserchannel",
    "engine.io",
    "framework",
    "comet",
    "streaming",
    "pubsub",
    "pub",
    "sub",
    "ajax",
    "xhr",
    "polling",
    "http",
    "faye",
    "io",
    "primus",
    "prumus",
    "real-time",
    "realtime",
    "socket",
    "socket.io",
    "sockets",
    "sockjs",
    "spark",
    "transformer",
    "transformers",
    "websocket",
    "websockets",
    "ws",
    "uws"
  ],
  "author": "Arnout Kazemier",
  "license": "MIT",
  "dependencies": {
    "access-control": "~1.0.0",
    "asyncemit": "~3.0.1",
    "create-server": "~1.0.1",
    "diagnostics": "~2.0.0",
    "eventemitter3": "~4.0.0",
    "forwarded-for": "~1.1.0",
    "fusing": "~1.0.0",
    "nanoid": "~3.1.10",
    "setheader": "~1.0.2",
    "ultron": "~1.1.0"
  },
  "devDependencies": {
    "binary-pack": "~1.0.2",
    "browserchannel": "~2.1.0",
    "browserify": "~16.5.0",
    "chai": "~4.2.0",
    "condenseify": "~1.1.1",
    "demolish": "~1.0.2",
    "derequire": "~2.1.1",
    "deumdify": "~1.2.3",
    "ejson": "~2.2.0",
    "emits": "~3.0.0",
    "engine.io": "~3.4.0",
    "engine.io-client": "~3.4.0",
    "faye-websocket": "~0.11.0",
    "inherits": "~2.0.3",
    "mocha": "~8.0.1",
    "pre-commit": "~1.2.0",
    "primus-msgpack": "~1.0.2",
    "pumpify": "~2.0.0",
    "querystringify": "~2.1.0",
    "recovery": "~0.2.6",
    "request": "~2.88.0",
    "rocambole": "~0.7.0",
    "rocambole-node-remove": "~3.0.0",
    "sockjs": "~0.3.18",
    "sockjs-client": "~1.4.0",
    "through2": "~4.0.2",
    "tick-tock": "~1.0.0",
    "url-parse": "~1.4.0",
    "uws": "10.148.1",
    "ws": "~7.3.1",
    "yeast": "~0.1.2"
  },
  "pre-commit": "test, integration"
}
